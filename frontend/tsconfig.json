{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "vue",
      "nuxt",
      "@nuxt/types",
      "@types/node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "modules.d.ts",
    "nuxt.config.ts",
    ".nuxt/**/*.ts",
    "tests/**/*.ts"
  ]
}
